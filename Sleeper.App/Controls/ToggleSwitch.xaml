<UserControl x:Class="Sleeper.App.Controls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="65">
    <Grid Width="65" Height="25" Background="LightBlue" PreviewMouseUp="ToggleState">
        <Label HorizontalAlignment="Left" FontSize="12" FontWeight="Bold" FontFamily="Calibri" VerticalContentAlignment="Top" Content="ON"/>
        <Label HorizontalAlignment="Right" FontSize="12" FontWeight="Bold" FontFamily="Calibri" VerticalContentAlignment="Top" Content="OFF"/>
        <Grid Name="Slider" Width="30" Height="21" Background="DarkGray" HorizontalAlignment="Right" Margin="2,0"/>
    </Grid>
</UserControl>
